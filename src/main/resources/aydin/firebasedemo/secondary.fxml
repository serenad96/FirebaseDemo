<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="284.0" prefWidth="466.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SecondaryController">
    <children>
        <Label text="Welcome! Sign in:" />
      <TextField fx:id="emailTextField" prefHeight="4.0" prefWidth="312.0" promptText="Email" />
      <TextField fx:id="passwordTextField" promptText="Password" />
      <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signInButtonClicked" text="Sign In" />
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" text="Register" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
